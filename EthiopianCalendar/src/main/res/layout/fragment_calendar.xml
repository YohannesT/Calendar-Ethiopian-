<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tamru.yohannes.ethiopiancalendar.activities.Main$PlaceholderFragment"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:divider="@android:drawable/divider_horizontal_textfield"
    android:showDividers="middle|end"
    android:dividerPadding="4dp"
    android:rowCount="4"
    android:columnCount="1"
    android:alignmentMode="alignBounds"
    android:orientation="vertical"
    android:rowOrderPreserved="true"
    android:useDefaultMargins="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtMonthYear"
        android:layout_row="0"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1" />

    <GridView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MonthView"
        android:layout_alignParentEnd="true"
        android:numColumns="7"
        android:stackFromBottom="false"
        android:drawSelectorOnTop="true"
        android:fastScrollAlwaysVisible="false"
        android:horizontalSpacing="4dp"
        android:stretchMode="columnWidth"
        android:textAlignment="center"
        android:verticalSpacing="4dp"
        android:choiceMode="multipleChoiceModal"
        android:clickable="false"
        android:transcriptMode="normal"
        android:visibility="visible"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light"
        android:focusableInTouchMode="true"
        android:padding="15dp"
        android:focusable="true"
        android:longClickable="true"
        android:fastScrollEnabled="true"
        android:layout_row="1"
        android:layout_margin="6dp"
        android:layout_gravity="center"
        android:layoutMode="clipBounds"
        android:smoothScrollbar="true"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtNiceDate"
        android:layout_gravity="center_horizontal|bottom"
        android:textAlignment="center"
        android:layout_row="2"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="100dp"
        style="1"
        android:gravity="center_horizontal|bottom"
        android:layout_gravity="center_horizontal|bottom"
        android:divider="@android:drawable/button_onoff_indicator_off"
        android:visibility="visible"
        android:layout_row="3"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=">"
            android:id="@+id/btnFirst"
            android:layout_weight="1"
            android:src="@drawable/fastleft"
            android:scaleType="fitXY"
            android:background="#04ffffff"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="9dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/previous"
            android:id="@+id/btnPrevious"
            android:layout_weight="1"
            android:src="@drawable/left"
            android:scaleType="fitXY"
            android:background="#04ffffff"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_marginLeft="9dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=">"
            android:id="@+id/btnNext"
            android:layout_weight="1"
            android:src="@drawable/right"
            android:scaleType="fitXY"
            android:background="#04ffffff"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="9dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/previous"
            android:id="@+id/btnLast"
            android:layout_weight="1"
            android:src="@drawable/fastright"
            android:scaleType="fitXY"
            android:background="#04ffffff"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="9dp" />
    </LinearLayout>

</GridLayout>
